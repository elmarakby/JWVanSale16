<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorWhite"
            app:navigationIcon="@drawable/ic_arrow_back_black_24dp"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:title="@string/initializing_offline_store_failed"
            app:titleTextColor="@color/colorBlack" />

    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/offline_transaction_issue_label"
        style="@style/FioriTextStyle.H6"
        android:theme="@style/Onboarding.Default.Light.Theme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="63dp"
        android:text="@string/initializing_offline_store_transaction_issue"
        app:layout_constraintBottom_toTopOf="@id/offline_transaction_issue_photo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/offline_transaction_issue_description1"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        style="@style/FioriTextStyle.Body2"
        android:theme="@style/Onboarding.Default.Light.Theme"
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/initializing_offline_store_transaction_issue_description1"
        app:layout_constraintTop_toBottomOf="@id/offline_transaction_issue_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/offline_transaction_issue_photo"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center"
        app:cardCornerRadius="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4155">

        <TextView
            android:id="@+id/imageAvatar"
            style="@style/TextAppearance.Fiori.Onboarding.SignInAvatarTextStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/circle"
            android:gravity="center" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/offline_transaction_issue_previous_username"
        style="@style/FioriTextStyle.Subtitle2"
        android:theme="@style/Onboarding.Default.Light.Theme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/offline_transaction_issue_photo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/offline_transaction_issue_previous_usermail"
        style="@style/FioriTextStyle.Body1"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toTopOf="@id/offline_transaction_issue_description2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/offline_transaction_issue_description2"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        style="@style/FioriTextStyle.Body2"
        android:theme="@style/Onboarding.Default.Light.Theme"
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="@string/initializing_offline_store_transaction_issue_description2"
        app:layout_constraintTop_toBottomOf="@id/offline_transaction_issue_photo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/offline_transaction_issue_button"
        android:layout_width="227dp"
        android:layout_height="36dp"
        android:background="@drawable/button_background"
        android:layout_marginTop="140dp"
        android:theme="@style/Onboarding.Default.Light.Theme"
        android:text="@string/initializing_offline_store_transaction_issue_button"
        android:textColor="@color/colorWhite"
        app:layout_constraintTop_toBottomOf="@id/offline_transaction_issue_photo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>